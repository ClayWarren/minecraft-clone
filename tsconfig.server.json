{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist/server",
    "rootDir": ".",
    "noEmit": false
  },
  "include": ["server.ts", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*", "!src/types/**/*"]
}
