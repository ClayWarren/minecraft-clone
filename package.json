{
  "name": "minecraft-clone",
  "version": "2.0.0",
  "description": "A modern TypeScript Minecraft clone with ECS architecture and best practices",
  "type": "module",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "tsc && vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "preview": "vite preview",
    "server": "tsx server.ts",
    "server:dev": "tsx watch server.ts",
    "start": "concurrently \"npm run server:dev\" \"npm run dev\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/three": "^0.179.0",
    "@types/ws": "^8.5.0",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^8.2.2",
    "tsx": "^4.0.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "three": "^0.179.1",
    "ws": "^8.18.3"
  }
}
